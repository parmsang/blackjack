body {
  text-align: center;
  background-image: url(<%= asset_path('felt.jpg')%>);

}

h1 {
  font-size: 50px;
  font-family: "Lucida Console", Arial, sans-serif;
  color: #ffff00;
  text-align: center;
}

h3 {
  font-size: 30px;
  font-family: "Lucida Console", Arial, sans-serif;
  color: #ffff00;
  text-align: center;
}

.hand {
  max-width: 980 px;
  margin: 0 auto;
  text-align: center;
}

.deck {

  float: left;
}
.hit {
  height: 50px;
  width: 100px;
  border-style: solid;
  border-radius: 10px;
  background-color: #1bba61;
  border-color: black;
  text-shadow: 0px 2px 2px #ddd;
}

.deal {
  height: 50px;
  width: 100px;
  border-style: solid;
  border-radius: 10px;
  background-color: yellow;
  border-color: black;
  text-shadow: 0px 2px 2px #ddd;
}

.stand {
  height: 50px;
  width: 100px;
  border-style: solid;
  border-radius: 10px;
  background-color: red;
  border-color: black;
  text-shadow: 0px 2px 2px #ddd;
}

.king {
  height: 200px;
  width: 150px;

}

img {

  height: 200px;
  width: 150px;


}

.back {
  height: 200px;
  width: 150px;
  float: left;
}

.buttons {
  display: inline-block;
  font-weight: bold;
  text-align: center;

}
